<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>PersonalFinanceTracker</display-name>

  <!-- Add Transaction -->
  <servlet>
    <servlet-name>AddTransactionServlet</servlet-name>
    <servlet-class>com.finance.servlet.AddTransactionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddTransactionServlet</servlet-name>
    <url-pattern>/addTransaction</url-pattern>
  </servlet-mapping>

  <!-- Dashboard -->
  <servlet>
    <servlet-name>DashboardServlet</servlet-name>
    <servlet-class>com.finance.servlet.DashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DashboardServlet</servlet-name>
    <url-pattern>/dashboard</url-pattern>
  </servlet-mapping>

  <!-- Delete Transaction -->
  <servlet>
    <servlet-name>DeleteTransactionServlet</servlet-name>
    <servlet-class>com.finance.servlet.DeleteTransactionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteTransactionServlet</servlet-name>
    <url-pattern>/deleteTransaction</url-pattern>
  </servlet-mapping>

  <!-- Export CSV -->
  <servlet>
    <servlet-name>ExportCSVServlet</servlet-name>
    <servlet-class>com.finance.servlet.ExportCSVServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExportCSVServlet</servlet-name>
    <url-pattern>/exportCSV</url-pattern>
  </servlet-mapping>

  <!-- Export PDF -->
  <servlet>
    <servlet-name>ExportPDFServlet</servlet-name>
    <servlet-class>com.finance.servlet.ExportPDFServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExportPDFServlet</servlet-name>
    <url-pattern>/exportPDF</url-pattern>
  </servlet-mapping>

  <!-- Default Page -->
  <welcome-file-list>
    <welcome-file>dashboard</welcome-file>
  </welcome-file-list>
</web-app>
